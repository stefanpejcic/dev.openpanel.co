{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    // TSUP issue https://github.com/egoist/tsup/issues/571
    // "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
  },
}
